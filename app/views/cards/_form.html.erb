<%= simple_form_for [current_project, @board, @list, @card], html: {
  data: {
    'as-project-id': current_project.id,
    'as-resource-id': @card.id,
    'as-resource-type': 'card',
    auto_save_key: @card.new_record? ? "#{@list.id}-card#{"-#{params[:template]}" if params[:template]}" : "card-#{@card.id}",
    behavior: 'server-auto-save local-auto-save'
  }
} do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, required: false %>
  <%= f.input :due_date, html5: true, include_blank: true %>

  <%=
    f.input :description,
      input_html: {
        class: 'textile h-100',
        data: {
          allow_dropdown: @card.new_record?,
          behavior: 'rich-toolbar',
          paths: editor_paths,
          'rich-toolbar': 'block-code bold field italic link list-ol list-ul table'
        },
        label: false,
        rows: 20
      }
  %>

  <%=
    f.association(
      :assignees,
      collection: current_project.authors.sort_by(&:name),
      label_method: lambda do |user|
        avatar_image(user, include_name: true, size: 30)
      end,
      value_method: :id,
      as: :check_boxes,
      item_wrapper_tag: :div,
      boolean_style: :inline
    )
  %>

  <div class="form-actions">
    <%= f.button :submit, nil, class: 'btn btn-primary' %> or

    <% if @card.new_record? %>
      <%= link_to 'Discard changes', project_board_path(current_project, @board), class: 'cancel-link', data: { behavior: 'clear-local-auto-save' } %>
    <% else %>
      <%= link_to 'Discard changes', project_board_list_card_revision_path(current_project, @board, @list, @card), method: :delete, class: 'cancel-link', data: { behavior: 'clear-local-auto-save' } %>
    <% end %>
  </div>
<% end %>
