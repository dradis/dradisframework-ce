<%= simple_form_for [current_project, @issue], html: {
  data: {
    'as-project-id': current_project.id,
    'as-resource-id': @issue.id,
    'as-resource-type': 'issue',
    auto_save_key: @issue.new_record? ? "project-#{current_project.id}-issue#{"-#{params[:template]}" if params[:template]}" : "issue-#{@issue.id}",
    behavior: 'local-auto-save server-auto-save'
  }
} do |f| %>
  <%= f.error_notification %>

  <%=
    f.input :text,
      label: false,
      input_html: {
        class: 'textile h-100',
        data: {
          allow_dropdown: @issue.new_record?,
          autosave_key: "#{current_project.id}-issue-#{ @issue.persisted? ? "edit-#{@issue.id}" : 'new' }",
          behavior: 'rich-toolbar',
          paths: editor_paths,
          'rich-toolbar': 'block-code bold field italic link list-ol list-ul table'
        },
        rows: 20
      }
  %>

  <% if @issue.persisted? %>
    <%= hidden_field :issue, :original_updated_at, value: @issue.updated_at.to_i, data: { behavior: 'auto-save-updated-at' } %>
  <% end %>

  <%= render 'tag_input', f: f %>

  <div class="form-actions">
    <%= f.button :submit, nil, class: 'btn btn-primary' %> or

    <% if @issue.new_record? %>
      <%= link_to 'Discard changes', project_issues_path(current_project), class: 'cancel-link', data: { behavior: 'clear-local-auto-save' } %>
    <% else %>
      <%= link_to 'Discard changes', project_issue_revision_path(current_project, @issue), method: :delete, class: 'cancel-link', data: { behavior: 'clear-local-auto-save' } %>
    <% end %>
  </div>
<% end %>
